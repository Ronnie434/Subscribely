{
  "cli": {
    "version": ">= 13.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      },
      "hooks": {
        "pre-build": "npm ci"
      }
    },
    "ios-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      },
      "env": {
        "APP_ENV": "development",
        "NODE_OPTIONS": "--max_old_space_size=4096"
      },
      "hooks": {
        "pre-build": "npm ci"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release"
      },
      "env": {
        "APP_ENV": "preview",
        "NODE_OPTIONS": "--max_old_space_size=4096"
      },
      "hooks": {
        "pre-build": "npm ci"
      },
      "channel": "preview"
    },
    "production": {
      "distribution": "store",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "autoIncrement": true
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true
      },
      "env": {
        "APP_ENV": "production",
        "NODE_OPTIONS": "--max_old_space_size=4096"
      },
      "hooks": {
        "pre-build": "npm ci"
      },
      "channel": "production"
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@email.com",
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      }
    }
  }
}